<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="154dp"
        android:layout_height="199dp"
        android:layout_marginTop="50dp"
        android:contentDescription="Profile Image"
        android:scaleType="centerCrop"
        android:src="@drawable/foto" />

    <TextView
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Ana Nestania"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#800000"/>

    <TextView
        android:id="@+id/nim_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="2110817220011"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:text="Saya merupakan mahasiswi semester 4 di Program Studi Teknologi Informasi Fakultas Teknik Universitas Lambung Mangkurat. Saya memiliki ketertarikan untuk memecahkan masalah, membangun solusi yang berkelanjutan, dan belajar sebanyak mungkin tentang hal-hal yang menarik minat saya. Saya juga senang berbicara dengan orang-orang yang tertarik dengan Desain dan Self-Improvement."
        android:textSize="16sp" />

</LinearLayout>
